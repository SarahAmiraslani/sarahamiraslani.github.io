<ul class="card-text font-weight-light list-group list-group-flush">
  {% assign education = data[1] | sort: 'startDate' | reverse %}
  {% for content in education %}
    <li class="list-group-item">
      <div class="row">
        <div class="col-xs-2 col-sm-2 col-md-2 text-center date-column">
          {% if content.startDate %}
            {% assign startDate = content.startDate | split: '-' | join: '.' %}
            {% assign endDate = content.endDate | split: '-' | join: '.' | default: 'Present' %}
            <span class="badge date-badge" style="min-width: 100px"> {{ startDate }} - {{ endDate }} </span>
          {% endif %}
        </div>
        <div class="col-xs-10 cl-sm-10 col-md-10 mt-2 mt-md-0">
          <h6 class="title font-weight-bold ml-1 ml-md-4 padded-title" style="font-size: 1.25rem">
            <a href="{{ content.url }}">{{ content.institution }}</a>
          </h6>
          <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem">{{ content.area }}, {{ content.studyType }}</h6>
          <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem">{{ content.score }}</h6>
          {% if content.thesis %}
            <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem"><strong>Thesis:</strong> {{ content.thesis }}</h6>
          {% endif %}
          {% if content.courses %}
            <div class="ml-1 ml-md-4" style="font-size: 0.95rem">
              <strong>Courses:</strong>
              {{ content.courses | join: ', ' }}
            </div>
          {% endif %}
        </div>
      </div>
    </li>
  {% endfor %}
</ul>
